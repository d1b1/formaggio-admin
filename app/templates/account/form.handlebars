<form role="form" role="form" id="employerInfoForm">

  <div class="row">

    <div class="col-md-offset-2 col-md-3 form-group">
        <label>Full Name</label>
        <input type="text" value="{{model.name}}" placeholder="Full Name" class="form-control">
    </div>

    <div class="col-md-5 form-group">
        <label>Bio</label>
        <input type="text" value="{{model.bio}}" placeholder="Short Bio?" class="form-control">
    </div>

  </div>

  <div class="row">
    <div class="col-md-offset-2 col-md-3 form-group">
        <label>Username</label>
        <input type="text" value="{{model.username}}" placeholder="Username" class="form-control">
        <br>
        <button class="btn btn-icon btn-default glyphicons">Change</button>
    </div>

    <div class="col-md-offset-1 col-md-3 form-group">
        <label>Account Type</label>
        <input type="text" value="{{model.accounttype}}" placeholder="Type of Account" class="form-control">
    </div>
  </div>

  <div class="row">
    <hr>
  </div>

  <div class="row">

    <div class="col-md-offset-2 col-md-2 form-group">
        <label>Phone</label>
        <input type="text" data-model-key="phone" value="{{model.phone}}" placeholder="Phone Number" class="form-control">
    </div>

    <div class=" col-md-2 form-group">
        <label>Twitter</label>
        <input type="text" data-model-key="twitter" value="{{model.twitter}}" placeholder="Twitter Screenname" class="form-control">
    </div>

    <div class="col-md-2 form-group">
        <label>Facebook</label>
        <input type="text" data-model-key="facebook" value="{{model.facebook}}" placeholder="Facebook Screenname" class="form-control">
    </div>

    <div class="col-md-2 form-group">
        <label>Foursquare</label>
        <input type="text" data-model-key="foursquare" value="{{model.foursquare}}" placeholder="Foursquare?" class="form-control">
    </div>

  </div>

  <div class="row">
    <hr>
  </div>

  <div class="row">

    <div class="col-md-offset-2 col-md-6 form-group">
        <label>Avatar</label>
        <input type="text" data-model-key="avatar" value="{{model.avatar}}" placeholder="Got an Avatar URL" class="form-control">
    </div>

  </div>

  <div class="row">
    <hr>
  </div>

  <div class="row">

    <div class="col-md-offset-2 col-md-6 form-group">
        <label>Address</label>
        <input type="text" data-model-key="address" value="{{model.address}}" placeholder="Address" class="form-control">
    </div>

  </div>

  <div class="row">

    <div class="col-md-offset-2 col-md-2 form-group">
        <label>City</label>
        <input type="text" data-model-key="city" value="{{model.city}}" placeholder="City/Town Name" class="form-control">
    </div>

    <div class="col-md-2 form-group">
        <label>State</label>
        <input type="text" data-model-key="state" value="{{model.state}}" placeholder="State/Province" Name" class="form-control">
    </div>

    <div class="col-md-2 form-group">
        <label>Zip/Postal</label>
        <input type="text" data-model-key="zipcode" value="{{model.zipcode}}" placeholder="Zip/Postal Code" Name" class="form-control">
    </div>

  </div>

  <div class="row">

    <div class="col-md-offset-2 col-md-6 form-group">
        <label>Country</label>
        <input type="text" data-model-key="country" value="{{model.country}}" placeholder="Country" class="form-control">
    </div>

  </div>

  <div class="row">

    <div class="form-group">
      <div class="col-lg-offset-8 col-lg-12">
        <button class="btn btn-icon btn-default glyphicons circle_ok saveButton">Save Changes</button>
        <button class="btn btn-icon btn-default glyphicons circle_ok cancelButton">Cancel</button>
      </div>
    </div>

  </div>

</form>
