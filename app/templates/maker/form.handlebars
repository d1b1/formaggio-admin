<form role="form" class="form-horizontal" id="employerInfoForm">

  <div class="form-group">
    <label class="col-lg-3 control-label">Name</label>
    <div class="col-lg-9">
      <input type="text" class="form-control col-xs-3" id="name" data-model-key="name" value="{{model.name}}" placeholder="" data-validate="required">
      <span class="error help-block hide">Please enter a template name</span>
    </div>
  </div>

  <div class="form-group">
    <label class="col-lg-3 control-label">Type</label>
    <div class="col-lg-9">
      <select id="contentType" name="contentType" data-model-key="contentType" data-value="{{model.contentType}}" data-validate="required" class="form-control">
        <option value="" {{#if_empty model.contentType}}selected{{/if_empty}}>Select Content Type</option>
        <option value="employeeOptions" {{#if_eq model.contentType "employeeOptions"}}selected{{/if_eq}}>Employee Options</option>
        <option value="employeeDetails" {{#if_eq model.contentType "employeeDetails"}}selected{{/if_eq}}>Employee Details</option>
        <option value="employeeSummary" {{#if_eq model.contentType "employeeSummary"}}selected{{/if_eq}}>Employee Summary</option>
        <option value="employerOptions" {{#if_eq model.contentType "employerOptions"}}selected{{/if_eq}}>Employer Options</option>
        <option value="employerDetails" {{#if_eq model.contentType "employerDetails"}}selected{{/if_eq}}>Employer Details</option>
        <option value="employerSummary" {{#if_eq model.contentType "employerSummary"}}selected{{/if_eq}}>Employer Summary</option>
      </select>
      <span class="error help-block hide">Please enter the payroll period</span>
    </div>
  </div>

  <div class="form-group">
    <label class="col-lg-3 control-label">Content</label>
    <div class="col-lg-9">
      <textarea type="text" rows="15" class="form-control col-10" id="content" data-model-key="content" placeholder="" data-validate="required">{{model.content}}</textarea>
      <span class="error help-block hide">Please enter a template content</span>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-8 col-lg-12">
      <button class="btn btn-icon btn-default glyphicons circle_ok saveButton">Save Changes</button>
      <button class="btn btn-icon btn-default glyphicons circle_ok cancelButton">Cancel</button>
    </div>
  </div>

</form>
