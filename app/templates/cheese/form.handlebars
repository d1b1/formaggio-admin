
<form role="form" class="form-horizontal" id="employerInfoForm">

  <div class="form-group">
    <label class="col-lg-3 control-label">Name</label>
    <div class="col-lg-9">
      <input type="text" class="form-control col-xs-3" id="name" data-model-key="name" value="{{model.name}}" placeholder="" data-validate="required">
      <span class="error help-block hide">Please enter a cheese name</span>
    </div>
  </div>

  <div class="form-group">
    <label class="col-lg-3 control-label">Milk</label>
    <div class="col-lg-9">
      <select id="source" name="source" data-model-key="source" data-value="{{model.source}}" data-validate="required" class="form-control">
        <option value="" {{#if_empty model.source}}selected{{/if_empty}}>Select Milk Type</option>
        <option value="Cow" {{#if_eq model.source "Cow"}}selected{{/if_eq}}>Cow</option>
        <option value="Goat" {{#if_eq model.source "Goat"}}selected{{/if_eq}}>Goat</option>
        <option value="Sheep" {{#if_eq model.source "Sheep"}}selected{{/if_eq}}>Sheep</option>
        </select>
      <span class="error help-block hide">Please enter the payroll period</span>
    </div>
  </div>

  <div class="form-group">
    <label class="col-lg-3 control-label">Description</label>
    <div class="col-lg-9">
      <textarea type="text" rows="5" class="form-control col-10" id="description" data-model-key="description" placeholder="" data-validate="required">{{model.content}}</textarea>
      <span class="error help-block hide">Please enter a description</span>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-8 col-lg-10">
    <button class="btn btn-icon btn-primary glyphicons circle_ok saveButton"><i></i>Save</button>
    <button class="btn btn-icon btn-default glyphicons circle_ok cancelButton"><i></i>Cancel</button>
    </div>
  </div>

</form>
