<div class="modal hide fade" id="LoginModalDialog" data-backdrop="static">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&#215;</button>
        <h3 class="title">Login</h3>
      </div>

      <div class="modal-body padded">
        <form class="form-horizontal" id="modalForm">

              <p>
                Oops you are accessing a feature that requires you to
                have an account. Please login or register.
              </p>

              <div class="form-group">
                 <label class="col-md-3 control-label">Username</label>
                 <div class="col-md-7">
                   <input type="text" class="form-control col-xs-3" placeholder="Enter your username" value="" name="username">
                 </div>
              </div>

              <div class="form-group">
                 <label class="col-md-3 control-label">Password</label>
                 <div class="col-md-7">
                   <input type="password" class="form-control col-xs-3" placeholder="Enter your password" value="" name="password">
                 </div>
              </div>

              <p class="text-danger" id="ModalErrorMessages"></p>

        </form>
      </div>

      <div class="modal-footer">

        <div class="col-md-3">
          <button href="javascript:void(0)" class="btn btn-default" data-dismiss="modal">Register</button>
        </div>

        <div class="col-md-9">
          <button href="javascript:void(0)" class="btn btn-default" data-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-success btn-default actionButton" data-state="open">Continue</button>
        </div>

      </div>

    </div>
  </div>
</div>
