
<section class="panel">
  <div class="panel-body profile-information">

    <div class="col-md-3">
      <div class="profile-pic text-center">
        <img src="{{model.logourl}}" alt="">
      </div>
    </div>

    <div class="col-md-6">
      <div class="profile-desk">
        <h1>{{model.name}}</h1>
        <span class="text-muted">{{model.country}}</span><br>
        <span class="text-muted"><b>Created:</b> {{easyDate model.created}}</span><br>
        <span class="text-muted"><b>Modified:</b> {{easyDate model.modified}}</span>
        <br/>
      </div>
    </div>

    <div class="col-md-3">
      <br/>
      <button class="btn btn-primary">Email <i class="fa fa-plus"></i></button>

      <br/><br/>
      {{#if_notempty model.website }}
        <a href="{{model.website}}" target="_blank" class="btn btn-primary">Site Site <i class="fa fa-plus"></i></a>
        <br/><br/>
      {{/if_notempty}}

      {{#if_notempty model.twitter }}
        <a href="http://twitter.com/{{model.twitter}}" target="_blank" class="btn btn-primary">Twitter <i class="fa fa-plus"></i></a>
        <br/><br/>
      {{/if_notempty}}

    </div>
  </div>
</section>
